@model Category
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper  col-11">
    <div class="row">
        <div class="col-lg-12" style="padding-left:55px">
            <h4> <span style="color:red">Title:</span> @Model.Name</h4>
            <div class="content-wrapper col-11">
                <div class="row">
                    <div class="col-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Products Table</h4>
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Image</th>
                                                <th>Name</th>
                                                <th>Price</th>
                                                <th>Rating</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var ProductItem in Model.Products)
                                            {
                                                <tr>
                                                    <td>
                                                        <img src="~/assets/images/website-images/@ProductItem.Image" />
                                                    </td>
                                                    <td>@ProductItem.Name</td>
                                                    <td>$@ProductItem.Price</td>
                                                    <td>@ProductItem.Rating</td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <a class="btn btn-info" asp-action="Index" style="margin-top:30px">Go Back</a>
        </div>
    </div>
</div>

