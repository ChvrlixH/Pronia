﻿﻿@using Pronia.Models;
@model IEnumerable<Slider>
@{
    ViewData["Title"] = "Slider Page";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper col-11">
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Slider Table</h4>
                    <div class="table-responsive">
                        <table class="table">
                            <a class="btn btn-primary" asp-action="Create">Create</a>
                            <thead>
                                <tr>
                                    <th>Profile</th>
                                    <th>VatNo.</th>
                                    <th>Created</th>
                                    <th>Offer</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var InfoItem in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="~/assets/admin/images/faces/@InfoItem.Image" />
                                        </td>
                                        <td>@InfoItem.Name</td>
                                        <td>@InfoItem.Description</td>
                                        <td>@InfoItem.Offer</td>
                                        <td>
                                            <a class="btn btn-success" asp-action="Read" asp-route-id="@InfoItem.Id">Read</a>
                                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@InfoItem.Id">Update</a>
                                            @if (ViewBag.Count == 1)
                                            {
                                                <a class="btn btn-danger disabled" asp-action="Delete" asp-route-id="@InfoItem.Id">Delete</a>
                                            }
                                            else
                                            {
                                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@InfoItem.Id">Delete</a>
                                            }
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

